<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F5F5F5"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="@string/tipCenter"
        app:titleMarginEnd="75dp"
        app:titleMarginStart="100dp"
        app:titleTextColor="@android:color/black" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/connection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/image_heart"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:src="@drawable/hearts"
        app:layout_constraintBottom_toBottomOf="@id/textMatch"
        app:layout_constraintEnd_toEndOf="@id/textMatch"

        app:layout_constraintStart_toStartOf="@id/textMatch"
        app:layout_constraintTop_toTopOf="@id/textMatch"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:layout_width="67dp"
        android:layout_height="18dp"
        android:text="@string/matching"
        app:layout_constraintBottom_toBottomOf="@+id/textMatch"
        app:layout_constraintEnd_toEndOf="@+id/textMatch"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/textMatch"
        app:layout_constraintTop_toTopOf="@+id/textMatch"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:layout_width="144dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="@string/tip_matching"
        app:layout_constraintBottom_toBottomOf="@+id/textMatch"
        app:layout_constraintEnd_toEndOf="@+id/textMatch"

        app:layout_constraintStart_toStartOf="@+id/textMatch"
        app:layout_constraintTop_toTopOf="@+id/textMatch"
        app:layout_constraintVertical_bias="0.323"
        app:layout_constraintHorizontal_bias="0.495"/>

    <TextView
        android:id="@+id/textMatch"
        android:layout_width="156dp"
        android:layout_height="203dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/big_rectangle"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/chat_box"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="85dp"
        android:layout_height="18dp"
        android:text="@string/convo"
        app:layout_constraintBottom_toBottomOf="@+id/chat_box"
        app:layout_constraintEnd_toEndOf="@+id/chat_box"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/chat_box"
        app:layout_constraintTop_toTopOf="@+id/chat_box"
        app:layout_constraintVertical_bias="0.045" />

    <ImageView
        android:id="@+id/image_convo"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:src="@drawable/conversation"
        app:layout_constraintBottom_toBottomOf="@+id/chat_box"
        app:layout_constraintEnd_toEndOf="@+id/chat_box"

        app:layout_constraintStart_toStartOf="@+id/chat_box"
        app:layout_constraintTop_toTopOf="@+id/chat_box"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="144dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="@string/tip_message"
        app:layout_constraintBottom_toBottomOf="@+id/chat_box"
        app:layout_constraintEnd_toEndOf="@+id/chat_box"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/chat_box"
        app:layout_constraintTop_toTopOf="@+id/chat_box"
        app:layout_constraintVertical_bias="0.323" />

    <!---
    -->

    <TextView
        android:id="@+id/chat_box"
        android:layout_width="156dp"
        android:layout_height="203dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/big_rectangle"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:src="@drawable/take_a_picture"
        app:layout_constraintBottom_toBottomOf="@id/photo_box"
        app:layout_constraintEnd_toEndOf="@id/photo_box"
        app:layout_constraintStart_toStartOf="@id/photo_box"
        app:layout_constraintTop_toTopOf="@id/photo_box"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintVertical_bias="0.901"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:text="@string/photo"
        app:layout_constraintBottom_toBottomOf="@+id/photo_box"
        app:layout_constraintEnd_toEndOf="@+id/photo_box"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/photo_box"
        app:layout_constraintTop_toTopOf="@+id/photo_box"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:layout_width="144dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="@string/tip_photo"
        app:layout_constraintBottom_toBottomOf="@+id/photo_box"
        app:layout_constraintEnd_toEndOf="@+id/photo_box"

        app:layout_constraintStart_toStartOf="@+id/photo_box"
        app:layout_constraintTop_toTopOf="@+id/photo_box"
        app:layout_constraintVertical_bias="0.323"
        app:layout_constraintHorizontal_bias="0.495"/>

    <!---
    -->

    <TextView
        android:id="@+id/photo_box"
        android:layout_width="156dp"
        android:layout_height="203dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/big_rectangle"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/prompt_box"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMatch" />

    <ImageView
        android:id="@+id/promptImage"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:src="@drawable/prompt"
        app:layout_constraintBottom_toBottomOf="@id/prompt_box"
        app:layout_constraintEnd_toEndOf="@id/prompt_box"
        app:layout_constraintStart_toStartOf="@id/prompt_box"
        app:layout_constraintTop_toTopOf="@id/prompt_box"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintVertical_bias="0.901"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:text="@string/prompt_title"
        app:layout_constraintBottom_toBottomOf="@+id/prompt_box"
        app:layout_constraintEnd_toEndOf="@+id/prompt_box"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/prompt_box"
        app:layout_constraintTop_toTopOf="@+id/prompt_box"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="144dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="@string/tip_prompts"
        app:layout_constraintBottom_toBottomOf="@+id/prompt_box"

        app:layout_constraintEnd_toEndOf="@+id/prompt_box"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/prompt_box"
        app:layout_constraintTop_toTopOf="@+id/prompt_box"
        app:layout_constraintVertical_bias="0.323" />

    <TextView
        android:id="@+id/prompt_box"
        android:layout_width="156dp"
        android:layout_height="203dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/big_rectangle"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toEndOf="@+id/textMatch"
        app:layout_constraintTop_toBottomOf="@+id/chat_box"
        app:layout_constraintVertical_bias="0.181" />


</androidx.constraintlayout.widget.ConstraintLayout>
